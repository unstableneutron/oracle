{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "allowImportingTsExtensions": true,
    "checkJs": false,
    "noEmit": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "markdansi": ["./node_modules/markdansi/dist/index"]
    }
  },
  "include": ["bin/**/*.ts", "scripts/**/*.ts", "src/**/*.ts", "tests/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", ".bun-check"]
}
